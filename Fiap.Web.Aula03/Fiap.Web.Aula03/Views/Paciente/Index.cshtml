@model List<Paciente>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<table class="table table-striped">
    <tr>
        <th>ID</th>
        <th>Nome</th>
        <th>CPF</th>
        <th>Data de Nascimento</th>
        <th>Tipo de Atendimento</th>
    </tr>
    @foreach(var item in Model)
    {
        <tr>
            <td>@item.PacienteId</td>
            <td>@item.Nome</td>
            <td>@item.Cpf</td>
            <td>@item.DataNascimento.ToShortDateString()</td>
            <td>@item.ModalidadeAtendimento</td>
            <td>
                <a asp-action="editar" asp-route-id="@item.PacienteId" class="btn btn-sm btn-primary">Editar</a>
                <!-- Button trigger modal -->
                <button onclick="key.value = @item.PacienteId" type="button" class="btn btn-sm btn-danger" data-bs-toggle="modal" data-bs-target="#exampleModal">
                    Remover
                </button>
            </td>
        </tr>
    }
</table>

<!-- Modal -->
<div class="modal fade" id="exampleModal" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h1 class="modal-title fs-5" id="exampleModalLabel">Confirmação</h1>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                Deseja realmente apagar o personagem?
            </div>
            <div class="modal-footer">
                <form asp-action="excluir">
                    <input type="hidden" name="id" id="key" />
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Não</button>
                    <button type="submit" class="btn btn-danger">Sim</button>
                </form>
            </div>
        </div>
    </div>
</div>